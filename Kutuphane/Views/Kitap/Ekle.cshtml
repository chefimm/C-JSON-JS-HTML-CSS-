<h2>Kitap Ekle</h2>

<form class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-12">Kategori Ekle</label>
        <div class="col-sm-10">
            <select id="kategoriler" class="form-control">
                @foreach (var kategori in ViewBag.Kategoriler)
                {
                    <option data-id="@kategori.Id">@kategori.Ad</option>
                }               
            </select>
        </div>
        <div class="col-sm-2">
            <input type="button" id="kategoriEkle" class="btn btn-block btn-primary" value="Ekle" />
        </div>
        <div id="eklenenKategoriler" class="form-group">
            <label class="col-md-12">Kategoriler</label>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-12">Yazar Ekle</label>
        <div class="col-sm-10">
            <select id="yazar" class="form-control">
                @foreach (var yazar in ViewBag.Yazarlar)
                {
                    <option data-id="@yazar.Id">@yazar.Ad</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-12">Kitap Adı</label>
        <div class="col-md-12">
            <input id="kitapAd" type="text" class="form-control" placeholder="Kitap Adı Giriniz">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-12">Kitap Adeti</label>
        <div class="col-md-12">
            <input id="kitapAdet" type="text" class="form-control" placeholder="Kitap Adeti Giriniz">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-12">Kitap Isbn</label>
        <div class="col-md-12">
            <input id="kitapIsbn" type="text" class="form-control" placeholder="Kitap Isbn Giriniz">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <input type="button" id="kitapKaydet" class="btn btn-block btn-primary" value="Kaydet" />
        </div>
    </div>
</form>
