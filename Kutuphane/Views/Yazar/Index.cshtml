@using Kutuphane.Models
@model List<YazarModel>

<h2>Yazarlar</h2>

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Yazar Adı</th>
            <th>Kitap Adeti</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yzr in Model)
        {
            <tr>
                <td>@yzr.Ad</td>
                <td>@(yzr.Kitaplar != null ? yzr.Kitaplar.Count() : 0)</td>
                <td><button class="yazarGuncelle btn btn-custom" value="@yzr.Id">Güncelle</button></td>
                <td><button class="yazarSil btn btn-danger" value="@yzr.Id">Sil</button></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Yazar Adı</th>
            <th>Kitap Adeti</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </tfoot>
</table>